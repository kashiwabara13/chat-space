.notification
  .wrapper
    .side
      .side__top
        .side__top__box
          .side__top__box__name
            = current_user.name
          %ul.side__top__box__menu
            %li.side__top__box__menu__new
              = link_to new_group_path do
                %i.fa.fa-edit
            %li.side__top__box__menu__edit
              = link_to edit_user_path(current_user) do
                %i.fa.fa-cog
      .group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message

